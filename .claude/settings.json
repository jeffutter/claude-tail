{
  "permissions": {
    "allow": [
      "Bash(cargo build:*)",
      "Bash(cargo clippy:*)",
      "Bash(cargo fmt:*)",
      "Bash(find:*)",
      "Bash(lefthook:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "LEFTHOOK_OUTPUT=\"failure\" lefthook run pre-commit --no-tty"
          }
        ]
      }
    ]
  }
}

